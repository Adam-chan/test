<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd 
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
	">
	<bean id="propertyConfigurer" class="com.golden.port.framework.configs.ConfigReader">
		<property name="locations">
			<list>
				<value>classpath:config/*.properties</value>
			</list>
		</property>
	</bean>
	<!-- crm客户系统服务 -->
	<context:component-scan base-package="com.golden.ihome.crm.service"/>
	<context:component-scan base-package="com.golden.ihome.crm.dao"/>
	<!-- addr地址库系统服务 -->
	<context:component-scan base-package="com.golden.ihome.addr.service"/>
	<context:component-scan base-package="com.golden.ihome.addr.dao"/>
	<!-- 公共服务 -->
	<context:component-scan base-package="com.golden.ihome.common.aop"/>
	<context:component-scan base-package="com.golden.ihome.common.service"/>
	
	<!-- 数据源 -->
	<import resource="datasource/ApplicationContext-datasource.xml"/>
	<import resource="registration/dubbo.xml"/>
	<import resource="scheduler/scheduler.xml"/>
	<!-- <import resource="ehcache/ehcache.xml"/>
	<import resource="ehcache/spring-ehcache.xml"/> -->
</beans>
