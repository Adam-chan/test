<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd    
          http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	
	<!-- dubbo连接远程服务 -->
	<dubbo:application name="ihome-service" />
	<dubbo:registry address="${zookeeper.url}" /> 
	
    <!-- 声明需要暴露的服务接口 -->
	<bean id="ihomeService" class="com.golden.port.framework.stores.impl.ServiceStore"/>
    <!-- 授信申请start -->
	<dubbo:service interface="com.golden.port.framework.stores.IServiceStore" ref="ihomeService" version="${dubbo.version}"/>
	<!-- 开发本地配置 -->
	<dubbo:protocol name="dubbo" port="20880" />
</beans>