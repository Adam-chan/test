<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd 
                    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd 
                    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd"
      >
	<!-- 视图过滤 -->
    <mvc:annotation-driven>
   		<mvc:message-converters register-defaults="true">
        <!-- 将StringHttpMessageConverter的默认编码设为UTF-8 -->
        <bean class="org.springframework.http.converter.StringHttpMessageConverter">
            <constructor-arg value="UTF-8"/>
        </bean>
   		</mvc:message-converters>
   		<mvc:argument-resolvers>
             <bean id="currentUserArgumentResolver" class="com.golden.port.framework.resolvers.SSOCurrentUserArgumentResolver">
                    <property name="currentUserClass" value="com.golden.port.framework.resolvers.LoginUser" />
             </bean>
        </mvc:argument-resolvers>
    </mvc:annotation-driven>
    <!-- 扫描controller -->
	<context:component-scan base-package="com.golden.crm.web.controller" />
    <bean id="multipartResolver"  
        class="org.springframework.web.multipart.commons.CommonsMultipartResolver">  
        <!-- set the max upload size100MB -->  
        <property name="maxUploadSize">  
            <value>104857600</value>  
        </property>  
        <property name="maxInMemorySize">  
            <value>4096</value>  
        </property>  
        <property name="defaultEncoding">  
	        <value>UTF-8</value>  
	    </property> 
    </bean>
	<mvc:resources location="/pages/error/" mapping="/pages/error/**"/>
	<mvc:resources location="/resource/" mapping="/resource/**"/>
</beans>
