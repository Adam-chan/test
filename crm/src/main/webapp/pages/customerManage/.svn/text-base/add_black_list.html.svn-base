<div class="col-xs-12"style="font-size:14px; ">
	<strong style="border: 1px solid #b5b5b5;border-bottom: none;width: 100%;display: block;">拉黑理由:</strong>
	<p class="col-xs-12" style="padding:0;">
	<textarea style="height:220px;width:100%;" id="remark" maxlength="1000"></textarea>
	</p>
</div>

<script type="text/javascript">
//保存下载资料
function saveBlackList(customerId) {
	var remark=$("#remark").val();
	var url = "${CTX}/customerManage/saveBlackList.do";
	$.ajax({
		type : "POST",
		url : url,
		async : false,
		dataType : "JSON",
		data : {
			customerId : customerId,
			remark : remark
		},
		success : function(data) {
			if (data >= 1) {
				alert("拉黑成功");
			} else {
				alert("拉黑失败");
			}
		}
	});
	
}

</script>