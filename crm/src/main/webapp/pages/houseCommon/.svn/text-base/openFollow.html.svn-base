<div class="row">
	<div class="col-xs-12 my-group">
		<div class="row">
			<div class="col-md-6">
				<div class="form-xs form-group row">
					<label class="col-xs-4 control-label">跟进时间：</label>
					<input id="followTime" name="followTime" type="text" class="5i5jDateTime input-xs" style="margin-left: 5px; background-color: #FFFFFF !important;" readonly="readonly" />
					<span class="clearTime" style="margin-left: -14px; font-size: 12px; cursor: default; display: none;">×</span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-xs form-group row">
					<label class="col-xs-4 control-label">跟进方式：</label>
					<div class="col-xs-8">
						<select id="followWay" class="input-xs form-control" name="followWay">
							<option value="">请选择</option>
							<option value="1">手机</option>
							<option value="2">QQ</option>
							<option value="3">短信</option>
							<option value="4">电话</option>
						</select>
					</div>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-xs form-group row">
					<label class="col-xs-2 control-label">跟进内容：</label>
					<div class="col-xs-10">
						<textarea id="followContent" name="followContent" rows="3" maxlength="83" style="width: 100%; resize: none;"></textarea>
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-xs form-group row">
					<label class="col-xs-4 control-label">下一次跟进时间：</label>
					<input id="nextFollowTime" name="nextFollowTime" type="text" class="5i5jDateTime input-xs" style="margin-left: 5px; background-color: #FFFFFF !important;" readonly="readonly" />
					<span class="clearTime" style="margin-left: -14px; font-size: 12px; cursor: default; display: none;">×</span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-xs form-group row">
					<label class="col-xs-2 control-label">提醒内容：</label>
					<div class="col-xs-10">
						<textarea id="remindContent" name="remindContent" rows="3" maxlength="83" style="width: 100%; resize: none;"></textarea>
					</div>
				</div>
			</div>
		</div>
		<input id="houseInfoId" name="houseInfoId" type="hidden" value="${houseInfoId!}" />
	</div>
</div>
<script type="text/javascript">
/* 添加跟进 */
aihome.addFollow = function() {
	if($("#followTime").val() == "") {
		alert("请选择跟进时间！");
		return false;
	}
	if($("#followWay").val() == "") {
		alert("请选择跟进方式！");
		return false;
	}
	if($("#nextFollowTime").val() == "") {
		alert("请选择下一次跟进时间！");
		return false;
	}
	$.ajax({
		url : "${CTX}/commonSearch/addFollow.do",
		dataType : "json",
		data : {
			houseInfoId : $("#houseInfoId").val(),
			followTime : $("#followTime").val(),
			followContent : $("#followContent").val(),
			nextFollowTime : $("#nextFollowTime").val(),
			remindContent : $("#remindContent").val(),
			followWay : $("#followWay").val()
		},
		success : function(data) {
			alert("添加跟进成功！");
		}
	});
	return true;
}
$(function () {
	$(".5i5jDateTime").datetimepicker({
		format: "YYYY-MM-DD HH:mm"
	});
	$(".5i5jDateTime").change(function() {
		$(this).next().show();
	});
	$(".clearTime").click(function() {
		$(this).prev().val("");
		$(this).hide();
	});
})
</script>
