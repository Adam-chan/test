<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd 
    http://code.alibabatech.com/schema/dubbo 
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
 
	<!-- 配置为当前应用的名称 -->
	<dubbo:application name="crm" />
	
	<!-- 开发本地配置 --> 
	<!-- <dubbo:registry address="N/A" /> -->

	<dubbo:registry address="zookeeper:${remote.url}" /> 
		<dubbo:consumer check="false"  timeout="30000" />
		<dubbo:reference id="crmService" interface="com.golden.port.framework.stores.IServiceStore" version="${dubbo.version}" retries="0" timeout="30000"/>
	<dubbo:annotation/>
</beans>